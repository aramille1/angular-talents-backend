# MongoDB Atlas Configuration
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password
MONGODB_CLUSTER=your_cluster.mongodb.net
MONGODB_DATABASE=your_database_name
SLACK_WEBHOOK_URL=your_slack_webhook_url
ADMIN_PANEL_URL=your_admin_panel_url

# Local Development - set to "true" to use local MongoDB
USE_LOCAL_DB=true

# Mailtrap Configuration
MAILTRAP_TOKEN=your_mailtrap_api_token
CONFIRM_EMAIL_TEMPLATE_ID=your_mailtrap_template_id
RECRUITER_APPROVAL_TEMPLATE_ID=your_mailtrap_approval_template_id

# Security
JWT_SECRET=your_jwt_secret_for_authentication

# Frontend URL for redirects
FRONTEND_URL=http://localhost:4200

# Optional: Other environment variables your app might need
# PORT=8080
